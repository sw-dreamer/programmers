class Solution {
    public String solution(String s) {
       int length = s.length();
        
        if(length % 2 == 0){
            // 짝수일때 가운데 두글자
            return s.substring(length / 2 - 1, length / 2 + 1); 
        }else { // 홀수일때 가운데 한글자
            return s.substring(length / 2, length / 2 + 1);
        }
    }
}
