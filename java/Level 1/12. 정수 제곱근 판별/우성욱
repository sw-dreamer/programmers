class Solution {
    public long solution(long n) {
        long answer = 0;
        long n_sqrt = (long)Math.sqrt(n);
        
        if(n_sqrt * n_sqrt == n){
            answer = (long) (Math.pow((Math.sqrt(n)+1),2));
        }else{
            answer = -1;
        }
        return answer;
    }
}
