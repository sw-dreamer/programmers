class Solution {
    public long solution(int price, int money, int count) {
        long answer = 0;
        long sum = 0;
        
        for(int i = 1; i <= count; i++){
            sum += (price * i);
        }
        
        long result = sum - money;

        return answer = (result > 0) ? result : 0;
    }
}
