class Solution {
    public double solution(int[] arr) {
        double answer = 0; // sum값
// 합을 구하는 반복문
        for(int i =0; i < arr.length; i++){ // 횟수는 arr배열의 길이
            answer = answer + arr[i];
        }
// 평균 구하기; 합을 배열의 길이로 나눔
        double avg = answer / arr.length;
        return avg;
    }
}
