class Solution {
    public int solution(int n) {
        int answer = 0; //초기화 값
// n을 나눴을때 나머지가 0인 수의 합을 구하는 반복문
        for (int i = 1; i <= n; i++) {
               if (n % i == 0) { // n을 나눴을때 나머지가 0이면(true)이면 answer에 더하는 조건문
                answer = answer + i; 
            }
        }
        return answer;  
    }
}
