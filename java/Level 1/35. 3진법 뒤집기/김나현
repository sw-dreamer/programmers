class Solution {
    public int solution(int n) {
        // 3진법 변환 및 뒤집기
        String three = "";
        while (n > 0) {
            three += n % 3;
            n /= 3;
        }

        // 10진수로 변환
        int answer = 0;
        int power = 1; // 3의 거듭제곱
        for (int i = three.length() - 1; i >= 0; i--) {
            answer += (three.charAt(i) - '0') * power;
            power *= 3;
        }

        return answer;
    }
}
